<%= render "shared/error_messages", :target => @user %>

<div class="row">
<div class="col-md-4">
<%= form.text_field :name, :placeholder => "Name", :class => "form-control" %><br />

<%= form.text_field :email, :placeholder => "Email Address", :class => "form-control" %><br />

<%= form.password_field :password, :placeholder => "Password", :class => "form-control" %><br />

<%= form.password_field :password_confirmation, :placeholder => "Confirm Password", :class => "form-control" %>
</div>
<div class="col-md-2"></div>
<div class="col-md-4" style="margin-top: -50px;">
<h2 class="page-header"><small> Roles</small></h2>
<% Role.all.each do |role| %>
<%= check_box_tag 'user[role_ids][]', role.id, @user.roles.include?(role) %>
<%= role.description%><br><br>
<% end %>




</div>
</div>
<br>